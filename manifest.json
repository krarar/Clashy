      "url": "/#stores",
      "icons": [
        {
          "src": "./icons/shortcut-stores.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "تواصل معنا",
      "short_name": "تواصل",
      "description": "اتصل بفريق الدعم",
